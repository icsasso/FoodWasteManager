<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#FFF9F0"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/foodTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/food_item_placeholder"
        android:textColor="@color/muted_plum"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/foodExpiration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expiration_label"
        android:textColor="@color/muted_plum"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/foodTitle"
        app:layout_constraintTop_toBottomOf="@+id/foodTitle" />

    <ImageButton
        android:id="@+id/trashButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:contentDescription="@string/trashcan"
        app:layout_constraintBottom_toBottomOf="@+id/foodExpiration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/foodTitle"
        app:srcCompat="@drawable/trashbin" />


</androidx.constraintlayout.widget.ConstraintLayout>